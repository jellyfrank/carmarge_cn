    <report id="report_stock_picking"
    string="装箱单"
    model="sale.order"
    report_type="qweb-pdf"
    name="carmarge_sale_cn.report_stock_picking_list_document"
    file="carmarge_sale_cn.report_stock_picking_list_document"
    print_report_name="'装箱单 - %s' % (object.name)"/>

