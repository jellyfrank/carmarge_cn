<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_form" model="ir.ui.view">
            <field name="name">stock picking form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='operations']" position="inside">
                    <xpath expr="//page[@name='extra']//*" position="move"/>
                    <xpath expr="//page[@name='note']//*" position="move"/>
                </xpath>
                <xpath expr="//page[@name='extra']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='note']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>