<odoo>
  <data>
    <record id="view_purchase_order_form" model="ir.ui.view">
      <field name="name">purchase order form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <field name="amount_tax" position="after">
          <field name="delivery_cost"/>
          <field name="discount_manual"/>
        </field>
        <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
          <field name="packaging"/>
          <field name="packaging_qty"/>
          <field name="weight"/>
          <field name="net_weight"/>
          <field name="volume"/>
          <field name="packaging_weight"/>
          <field name="packaging_net_weight"/>
          <field name="packaging_volume"/>
        </xpath>
        <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
      </field>
    </record>

    <record id="view_product_template_tree" model="ir.ui.view">
      <field name="name">product template</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_tree_view"/>
      <field name="arch" type="xml">
        <field name="name" position="before">
          <field name="categ_id" position="move"/>
        </field>
        <field name="categ_id" position="attributes">
          <attribute name="optional">show</attribute>
        </field>
      </field>
    </record>

  </data>
</odoo>