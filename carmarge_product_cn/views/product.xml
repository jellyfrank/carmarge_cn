<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_template_form" model="ir.ui.view">
            <field name="name">product template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='weight']" position="after">
                    <label for="net_weight" string="净重"/>
                    <div class="o_row" name="net_weight">
                        <field name="net_weight"/>
                        <span>
                            <field name="weight_uom_name"/>
                        </span>
                    </div>
                    <label for="length" string='尺寸'/>
                    <div name="size" class="o_row">
                        长                        <field name="length"/>
厘米
                        宽                        <field name="width"/>
厘米
                        高                        <field name="height"/>
厘米
                    </div>
                </xpath>
                <field name="categ_id" position="after">
                    <field name="brand" widget="many2many_tags"/>
                </field>
                <xpath expr="//label[@for='weight']" position="attributes">
                    <attribute name="string">毛重</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_delivery_product_template_form" model="ir.ui.view">
            <field name="name">product template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="delivery.product_template_hs_code"/>
            <field name="arch" type="xml">
                <field name="hs_code" position="after">
                    <field name="comm_check"/>
                    <field name="is_brand_package"/>
                </field>
            </field>
        </record>

        <record id="view_product_template_tree" model="ir.ui.view">
            <field name="name">product template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="categ_id" position="move"/>
                </field>
                <field name="categ_id" position="attributes">
                    <attribute name="optional">show</attribute>
                </field>
                <field name="default_code" position="after">
                    <field name="barcode" position="move"/>
                    <field name="brand"/>
                    <field name="uom_id"/>
                    <field name="packaging_ids" widget="many2many_tags"/>
                    <field name="length"/>
                    <field name="width"/>
                    <field name="height"/>
                    <field name="volume"/>
                    <field name="net_weight"/>
                    <field name="weight"/>
                    <field name="packaging_length"/>
                    <field name="packaging_width"/>
                    <field name="packaging_height"/>
                    <field name="packaging_volume"/>
                    <field name="packaging_net_weight"/>
                    <field name="packaging_weight"/>
                </field>
                <field name="barcode" position="attributes">
                    <attribute name="optional">show</attribute>
                </field>
                <field name="responsible_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="standard_price" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="qty_available" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="virtual_available" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="uom_id" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
            </field>
        </record>



    </data>
</odoo>